<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">
    <LinearLayout
        android:layout_weight="3"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_tags_title"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="22dp"
            android:gravity="clip_vertical" />
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbarStyle="insideOverlay"
        android:id="@+id/listViewTags" />
   <LinearLayout
        android:layout_weight="3"
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false">
       <ImageView
           android:layout_weight="4"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:id="@+id/cancelTagImageView"
           android:src="@drawable/cancel_dialog_tag"/>
        <TextView
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dialog_tags_add_new"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="22dp"
            android:gravity="clip_vertical"
            android:id="@+id/labelTag" />
        <ImageView
            android:layout_weight="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addTagImageView"
            android:src="@drawable/add_tag"/>

    </LinearLayout>
</LinearLayout>